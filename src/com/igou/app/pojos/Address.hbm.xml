<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.igou.app.pojos">
	<class name="Address" table="address">
		<!-- 主键 -->
		<id name="id" column="ID">
			<generator class="native" />
		</id>
		<property name="name" column="name" type="string" not-null="true" />
		<property name="phone" column="phone" type="string" not-null="true" />
		<property name="detail" column="detail" type="string" not-null="true" />
		<property name="postalcode" column="postalcode" type="string" not-null="true" />
		<property name="isDefault" column="isDefault" type="int" not-null="true" />
		<property name="userinfoid" column="userinfo_id" type="int" not-null="true" />
	</class>
</hibernate-mapping>
