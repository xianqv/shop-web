<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.igou.app.pojos">
	<class name="Advert" table="advert">
		<!-- 主键 -->
		<id name="id" column="ID">
			<generator class="native" />
		</id>
				<property name="imageUrl" column="imageUrl" type="string" not-null="true" />
		<property name="link" column="link" type="string" not-null="true" />
		<property name="des" column="des" type="string"
			not-null="true" />
	
	</class>
</hibernate-mapping>
